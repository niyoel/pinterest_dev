{% extends 'base.html.twig' %}

{% block title %}Hello PinController!{% endblock %}

{% block body %}

    {# {% set pin_count = pins|length %}
    {{ pin_count }} #}
    <li><a href="{{ path('app_home') }}">Home</a></li>
    <p>
<li><a href="{{ path('app_pin_create') }}">Create Pin</a></li>
    {% for pin in pins %}
        <article>
<h2><a href="{{ path('app_pin_show', {id: pin.id}) }}">{{ pin.title }} </a></h2>                 <p>{{ pin.description|u.truncate(10,'...',false) }}</p> 
               <p>Submitted {{ pin.createdAt|ago }}</p>      
               <p>Updated {{ pin.updatedAt|ago }}</p>      
            
        </article>
    {% else %}
        <p> Sorry, no pin yet </p>
    {% endfor %}
{% endblock %}

